<h1>Update <%= @album.name() %></h1>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename album</label>
  <input id="name" name="name" type="text" class="form-control" value= <%= @album.name() %> >
  <label for="album_year">Album year</label>
  <input id="y" name="album_year" class="form-control" type="text" value= <%= @album.year() %>>
  <label for="album_genre">Album genre</label>
  <input id="g" name="album_genre" class="form-control" type="text" value= <%= @album.genre() %>>
  <label for="album_artist">Album artist</label>
  <input id="a" name="album_artist" class="form-control" type="text" value = <%= @album.artist() %>>

  <button type="submit">Update</button>
</form>

<p><a href="/albums">Return to album list</a></p>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete album</button>
</form>